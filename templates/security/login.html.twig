{% extends 'base.html.twig' %}

{% block additional_css %}
	<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="login-container">
		<h1>Connexion</h1>

		<form method="post">

			<div class="champs">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				{% if error and (error.getMessage() == 'Bad credentials.') %}
					<div class="error-message">Email incorrect</div>
				{% endif %}
			</div>
			<div class="champs">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				{% if error and (error.getMessage() == 'The presented password is invalid.') %}
					<div class="error-message">Mot de passe incorrect</div>
				{% endif %}
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="rememberme">
				<input type="checkbox" id="inputRememberme" name="rememberme">
				<label for="inputRememberme">Se souvenir de moi</label>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary" type="submit">
				Connexion
			</button>

			<a class="forget" href="#">Mot de passe oubli√© ?</a>

			<div>Pas de compte ?<a href="{{ path('app_register')}}">
					Inscription</a>
			</div>

		</form>

	</div>

	<script src="{{ asset('js/login.js') }}"></script>
{% endblock %}
