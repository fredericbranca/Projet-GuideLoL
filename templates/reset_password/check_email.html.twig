{% extends 'base.html.twig' %}

{% block additional_css %}
	<link rel="stylesheet" href="{{ asset('css/check-email.css') }}">
{% endblock %}

{% block title %}Password Reset Email Sent
{% endblock %}

{% block body %}
	<div class="message">
		<p>
			Un email contenant un lien pour réinitialiser votre mot de passe sera envoyé sous 2 minutes.
			        Ce lien expire dans
			{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
		</p>
		<p>Si vous n'avez pas reçu d'email, veuillez vérifier vos spams.</p>
		<p>Retouner à la page de
			<a href="{{ path('app_login') }}">connexion</a>
		</p>
	</div>
{% endblock %}
